<!-- ======= Framework Section ======= -->
<section id="framework" class="padd-section text-center">
    <div class="container" data-aos="fade-up">
      <div class="section-title text-center">
        <h2>${{ framework.title }}$</h2>
        <img src="<%= path %>assets/img/framework/logo.svg" width="120px" height="120px" alt="Next2D Framework">
        <p class="separator">${{ framework.description }}$</p>
      </div>

      <div class="row" data-aos="fade-up" data-aos-delay="100">

        <div class="col-md-6 col-lg-3">
          <div class="feature-block">
            <img loading="lazy" src="<%= path %>assets/img/framework/feature-01.svg" width="60px" height="60px" alt="Open Source">
            <h4>${{ framework.feature1-title }}$</h4>
            <p>${{ framework.feature1-description }}$</p>
          </div>
        </div>

        <div class="col-md-6 col-lg-3">
